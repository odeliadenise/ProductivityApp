# Production Deployment Configuration

# Node.js version
node_version = "18"

# Build command
build_command = "npm ci && npm run build"

# Output directory
publish_directory = "dist"

# Environment variables (to be set in hosting provider dashboard)
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-here
# VITE_API_URL=https://your-api-domain.com/api
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=Productivity App <your-email@gmail.com>

# For serverless deployment, you may need:
# DATABASE_URL=your-production-database-connection-string

# Redirects for SPA routing
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# API proxy configuration (if using same domain)
[[redirects]]  
  from = "/api/*"
  to = "https://your-backend-domain.com/api/:splat"
  status = 200
  force = true

# Security headers
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"
    Content-Security-Policy = "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:;"

# Cache headers for static assets
[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"